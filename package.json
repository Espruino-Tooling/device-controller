{
  "name": "@espruino-tools/core",
  "version": "1.1.7",
  "description": "An interactive Espruino package to simplify the code interaction between Espruino device and the javascript code.",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "tsc",
    "build:min": "webpack",
    "lint": "tslint -p tsconfig.json",
    "test": "jest --config jestconfig.json --silent --maxWorkers 1",
    "test:dev": "jest --config jestconfig.json",
    "prepare": "husky install",
    "minorincrement": "npm version patch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Espruino-Tooling/espruino-tools.git"
  },
  "keywords": [
    "espruino"
  ],
  "author": "Callum McLuskey",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Espruino-Tooling/espruino-tools/issues"
  },
  "homepage": "https://github.com/Espruino-Tooling/espruino-tools#readme",
  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@types/jest": "^29.2.4",
    "css-loader": "^6.7.1",
    "husky": "^8.0.0",
    "jest": "^29.3.1",
    "mini-css-extract-plugin": "^2.6.1",
    "prettier": "^2.7.1",
    "sass": "^1.55.0",
    "sass-loader": "^13.1.0",
    "style-loader": "^3.3.1",
    "terser-webpack-plugin": "^5.3.6",
    "ts-jest": "^29.0.3",
    "ts-loader": "^9.4.1",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.8.4",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  },
  "files": [
    "lib/**/*",
    "min/**/*"
  ],
  "dependencies": {
    "@espruino-tools/uart": "^1.5.6",
    "@types/jsdom": "^20.0.1",
    "jsdom": "^20.0.3"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint --env HUSKY_GIT_PARAMS"
    }
  }
}
